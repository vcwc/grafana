#!/usr/bin/env bash

# START CONFIGURATION
export VCW_STACK_GLOBAL_PACKAGE_CONTECO="vcwc/grafana"
export VCW_STACK_GLOBAL_PACKAGE_TAG="7.2.1"
export VCW_STACK_GLOBAL_STACKNAMES="grafana"
export VCW_STACK_GLOBAL_BOOTSTACKS=""
export VCW_STACK_GLOBAL_RUNSTACKS="grafana"
export VCW_STACK_GLOBAL_VOLUME_LIST="${VCW_STACK_GLOBAL_STACKPREFIX}_grafana_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${VCW_STACK_GLOBAL_STACKPREFIX}_grafana_volume:/var/lib/grafana"
# END CONFIGURATION

# START MODULE SETTINGS
export GRAFANA_MODULE_GRAFANA_AUTH_ANONYMOUS_ORG_ROLE="Editor"
export GRAFANA_MODULE_GRAFANA_LOG_LEVEL="warning"
export GRAFANA_MODULE_GRAFANA_SERVE_FROM_SUB_PATH="false"
export GRAFANA_MODULE_GRAFANA_SERVER_ROOT_URL=
export GRAFANA_MODULE_GRAFANA_PORT="3000"
# END MODULE SETTINGS

# START VOLUMES SETTINGS
# END VOLUMES SETTINGS

# START PORTS SETTINGS
export GRAFANA_PORTS="${GRAFANA_MODULE_GRAFANA_PORT}:3000"
# END PORTS SETTINGS

# START NETWORKS SETTINGS
# END NETWORKS SETTINGS

# START DEPLOY SETTINGS
export GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END DEPLOY SETTINGS
